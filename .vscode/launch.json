{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Debug",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "Build Debug",
      "program": "${workspaceFolder}/src/Product/NuGetTransitiveDependencyFinder.ConsoleApp/bin/Debug/net6.0/NuGetTransitiveDependencyFinder.ConsoleApp.dll",
      "args": [
        "--projectOrSolution",
        "${workspaceFolder}/NuGetTransitiveDependencyFinder.sln"
      ],
      "cwd": "${workspaceFolder}",
      "console": "externalTerminal"
    },
    {
      "name": "Launch Debug – All",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "Build Debug",
      "program": "${workspaceFolder}/src/Product/NuGetTransitiveDependencyFinder.ConsoleApp/bin/Debug/net6.0/NuGetTransitiveDependencyFinder.ConsoleApp.dll",
      "args": [
        "--projectOrSolution",
        "${workspaceFolder}/NuGetTransitiveDependencyFinder.sln",
        "--all"
      ],
      "cwd": "${workspaceFolder}",
      "console": "externalTerminal"
    },
    {
      "name": "Launch Debug – Help",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "Build Debug",
      "program": "${workspaceFolder}/src/Product/NuGetTransitiveDependencyFinder.ConsoleApp/bin/Debug/net6.0/NuGetTransitiveDependencyFinder.ConsoleApp.dll",
      "args": [
        "--help"
      ],
      "cwd": "${workspaceFolder}",
      "console": "externalTerminal"
    },
    {
      "name": "Launch Debug – Version",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "Build Debug",
      "program": "${workspaceFolder}/src/Product/NuGetTransitiveDependencyFinder.ConsoleApp/bin/Debug/net6.0/NuGetTransitiveDependencyFinder.ConsoleApp.dll",
      "args": [
        "--version"
      ],
      "cwd": "${workspaceFolder}",
      "console": "externalTerminal"
    },
    {
      "name": "Launch Release",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "Build Release",
      "program": "${workspaceFolder}/src/Product/NuGetTransitiveDependencyFinder.ConsoleApp/bin/Release/net6.0/NuGetTransitiveDependencyFinder.ConsoleApp.dll",
      "args": [
        "--projectOrSolution",
        "${workspaceFolder}/NuGetTransitiveDependencyFinder.sln"
      ],
      "cwd": "${workspaceFolder}",
      "console": "externalTerminal"
    },
    {
      "name": "Test Debug",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": [
        "test",
        "--configuration",
        "Debug",
        "--collect:\"XPlat Code Coverage\""
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Test Release",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": [
        "test",
        "--configuration",
        "Release",
        "--collect:\"XPlat Code Coverage\""
      ],
      "cwd": "${workspaceFolder}"
    }
  ]
}
